<%= render("focus_header", header_title: t("decidim.vocdoni.votes.header.ballot_decision")) %>

<div class="focus__content evote ballot_decision">
  <div class="row">
    <h1 class="heading2">
      <%= t("decidim.vocdoni.votes.ballot_decision.header") %>
    </h1>

    <div class="evote__content">
      <p><%= t("decidim.vocdoni.votes.ballot_decision.description") %></p>
      <p>
        <%= t("decidim.vocdoni.votes.ballot_decision.ballot_hash") %>
        <strong class="ballot-hash"></strong>
        <a class="audit_ballot"><%= t("decidim.vocdoni.votes.ballot_decision.audit") %></a>
      </p>
    </div>

    <%= submit_tag t("decidim.vocdoni.votes.ballot_decision.cast"), class: "button cast_ballot" %>

    <%= link_to election_path(election), class: "button back hide" do %>
      <%= t("decidim.vocdoni.votes.ballot_decision.back") %>
    <% end %>
  </div>
</div>
