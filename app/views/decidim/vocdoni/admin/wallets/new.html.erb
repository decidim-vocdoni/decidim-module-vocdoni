<% add_decidim_page_title(t(".title")) %>
<%= append_javascript_pack_tag "decidim_vocdoni_admin" %>

<div class="card">
  <div class="card-divider item_show__header">
    <h2 class="item_show__header-title"><%= t(".title") %></h2>
  </div>

  <div class="card-section">
    <div class="row column">
      <div class="callout primary">
        <p><%= t("help.p1", scope: "decidim.vocdoni.admin.wallets.form") %></p>
        <p><%= t("help.p2", scope: "decidim.vocdoni.admin.wallets.form") %></p>
      </div>

      <div class="flex justify-center">
        <%= link_to wallets_path, method: :remote, class: "button button__lg button__tertiary" do %>
          <%= icon "briefcase-2-line", role: "img", "aria-hidden": true %>
          <%= t(".create") %>
        <% end %>
      </div>
    </div>
  </div>
</div>
