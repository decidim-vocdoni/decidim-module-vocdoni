<% add_decidim_page_title(translated_attribute(election.title)) %>
<% add_decidim_page_title(t(".title")) %>

<%= render partial: "decidim/vocdoni/admin/shared/election_title" %>
<%= render partial: "decidim/vocdoni/admin/shared/tab_links", locals: { active_class: "census", election: election, status: @status } %>
<div class="card">
  <div class="card-section">
    <% if @status.pending_upload? %>
      <div class="card">
        <div class="card-divider">
          <h2 class="card-title">
            <%= t("index.title", scope: "decidim.vocdoni.admin.census") %>
          </h2>
        </div>
        <div class="card-section">
          <p>
            <%= t("index.info", scope: "decidim.vocdoni.admin.census") %>
          </p>
        </div>
        <div class="card-section collection-input">
          <%= radio_button_tag "census_type", "csv", !election.internal_census?, id: "csv_radio_button" %>
          <%= label_tag "csv_radio_button", t("census_type.csv", scope: "decidim.vocdoni.admin.census") %>

          <%= radio_button_tag "census_type", "permissions", election.internal_census?, id: "permissions_radio_button" %>
          <%= label_tag "permissions_radio_button", t("census_type.permissions", scope: "decidim.vocdoni.admin.census") %>
        </div>
      </div>
    <% end %>

    <% if @status.count > 0 %>
      <div class="card">
        <div class="card-divider">
          <h2 class="card-title">
            <%= t("status.title", scope: "decidim.vocdoni.admin.census") %>
          </h2>
        </div>
        <div class="card-section">
          <% if @status.ready_to_setup? %>
            <div class="callout success">
              <p><%= t("status.ready_to_setup_html", scope: "decidim.vocdoni.admin.census", steps_path: election_steps_path(election)) %></p>
            </div>
          <% end %>
          <p><%= t("decidim.vocdoni.admin.census.status.data", count: @status.count,
                   due_date: l(@status.last_import_at, format: :long)) %>
          </p>

          <% if @status.ready_to_setup? %>
            <%= link_to t("decidim.vocdoni.admin.census.destroy.title"),
                        destroy_all_election_census_path(election),
                        method: :delete,
                        class: "button alert",
                        data: { confirm: t("decidim.vocdoni.admin.census.destroy.confirm") } %>
          <% end %>

          <% if @status.pending_generation? %>
            <%= render partial: "generate_form", locals: { form: @form, election: election } %>
          <% end %>
        </div>
      </div>
    <% end %>

    <% if @status.pending_upload? %>
      <div id="csv_upload" class="card">
        <div class="card-divider">
          <h2 class="card-title">
            <%= t("new.title", scope: "decidim.vocdoni.admin.census") %>
          </h2>
        </div>
        <div class="card-section">
          <%= render partial: "upload_form", locals: { form: @form, election: election } %>
        </div>
      </div>

      <div id="permissions_select" class="card" style="display: none;">
        <div class="card-divider">
          <h2 class="card-title">
            <%= t("census_type.permissions", scope: "decidim.vocdoni.admin.census") %>
          </h2>
        </div>
        <div class="card-section">
          <%= render partial: "decidim_permissions_form", locals: { form: @census_permissions_form, election: election, current_organization: current_organization } %>
        </div>
      </div>
    <% end %>
    <% unless status.name == "ready" ||
      (election.internal_census? && election.verification_types.empty?) ||
      election.internal_census? && election.voters.empty? %>
    <div class="card-section">
      <div class="callout alert">
        <%=  t("census_warning", scope: "decidim.vocdoni.admin.census.index").html_safe  %>
      </div>
    </div>
    <%  end %>
  </div>

</div>
<div class="flex--cc">
  <% if election.ready_for_calendar_form? %>
    <%= link_to t("next_button", scope: "decidim.vocdoni.admin.elections.new"), edit_election_calendar_path(election), class: "button form-general-submit" %>
  <% end %>
</div>

<%= javascript_pack_tag "decidim_vocdoni_admin" %>
<%= stylesheet_pack_tag "decidim_vocdoni_admin_stylesheet" %>
