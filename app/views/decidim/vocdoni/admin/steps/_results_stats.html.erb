<ul class="accordion mb-4 evote__preview<%= " spinner-container" unless election.answers_have_votes? %>"
    data-accordion
    data-multi-expand="true"
    data-allow-all-closed="true">
    <% election.questions.each_with_index do |question, i| %>
      <li class="accordion-item evote__preview-question <%= " is-active" if i == 0 %>" data-accordion-item>
        <a href="#" class="accordion-title"><%= t(".question") %>: <%= translated_attribute(question.title) %></a>
        <div class="accordion-content" data-tab-content>
          <div>
            <table class="table-list">
              <thead>
                <tr>
                  <th><%= t(".answer") %></th>
                  <th><%= t(".result") %></th>
                </tr>
              </thead>
              <tbody>
                <% question.answers.each do |answer| %>
                  <tr>
                    <td><%= translated_attribute(answer.title) %></td>
                    <td><%= answer.votes.to_i %></td>
                  </tr>
                <% end %>
                <tr>
                  <td></td>
                  <td class="text-muted"><%= question.total_votes %></td>
                  <td></td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </li>
    <% end %>
</ul>
