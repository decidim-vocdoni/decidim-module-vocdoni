<div class="card">
  <div class="card-divider">
    <h2 class="card-title"><%= t(".title") %></h2>
  </div>

  <div class="card-section">
    <p><%= t(".message", end_time: election.end_time) %></p>

    <% if election.election_type.fetch("secret_until_the_end") %>
      <p><%= t("secret_until_the_end", scope: "decidim.vocdoni.admin.steps.created") %></p>
    <% end %>

    <p><%= t("url_html", scope: "decidim.vocdoni.admin.steps.created", explorer_vote_url: election.explorer_vote_url) %></p>
  </div>
</div>

<% unless election.election_type.fetch("secret_until_the_end") %>
  <%= render(partial: "vote_stats", locals: { polling: "true" }) %>
<% end %>
