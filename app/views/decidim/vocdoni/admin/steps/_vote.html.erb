<div class="card">
  <div class="card-divider">
    <h2 class="item_show__header-title"><%= t("title", scope: "decidim.vocdoni.admin.steps.vote") %></h2>
  </div>

  <div class="card-section">
    <p><%= t("message", scope: "decidim.vocdoni.admin.steps.vote", end_time: l(election.end_time, format: :long)) %></p>

    <% if election.election_type.fetch("secret_until_the_end") %>
      <p><%= t("secret_until_the_end", scope: "decidim.vocdoni.admin.steps.vote") %></p>
    <% end %>

    <%= render partial: "action_buttons", locals: { election: election } %>
  </div>
</div>

<% unless election.election_type.fetch("secret_until_the_end") %>
  <%= render(partial: "vote_stats") %>
<% end %>

<%= render partial: "danger_zone", locals: { election: election, f: f } %>
