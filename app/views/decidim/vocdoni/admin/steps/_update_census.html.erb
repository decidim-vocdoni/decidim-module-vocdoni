<% scope = "decidim.vocdoni.admin.steps.census" %>
<div class="card">
  <div class="card-divider">
    <h2 class="card-title"><%= t("title", scope: "decidim.vocdoni.admin.steps.census") %></h2>
  </div>

  <div class="card-section">
    <p><%= t("description", scope: "decidim.vocdoni.admin.steps.census") %></p>
    <p>
      <%= t("last_update", scope: scope) %>:
      <strong><%= election.census_last_updated_at&.strftime('%Y-%m-%d %H:%M:%S') || t("none", scope: scope)%></strong> |
      <span><%= t("records_added", scope: scope) %>:
        <strong><%= election.last_census_update_records_added || t("none", scope: scope) %></strong></span>
    </p>
    <p><%= t("users_awaiting_census", count: users_awaiting_census(election), scope: scope).html_safe %></p>
    <%= link_to_if census_needs_update?, t("update_census", scope: scope), update_census_election_steps_path(election), class: "button primary alert", method: :put do
      content_tag(:span, t("update_census", scope: scope), class: "button primary alert disabled")
    end %>

  </div>
</div>
