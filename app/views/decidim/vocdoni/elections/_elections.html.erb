<% if elections.none? %>
  <div class="callout warning">
    <%= t("decidim.vocdoni.warnings.no_elections_warning") %>
  </div>
<% end %>

<%# if elections.none? %>
  <%#= cell("decidim/announcement", t("decidim.elections.warnings.no_elections_warning"), callout_class: "warning") %>
<%# elsif scheduled_elections.none? %>
  <%#= cell("decidim/announcement", t("decidim.elections.warnings.no_scheduled_elections_warning"), callout_class: "warning") %>
<%# end %>

<h2 class="h5 md:h3 decorator"><%= t("elections_count", scope: "decidim.vocdoni.elections.count", count: paginated_elections.total_count) %></h2>

<%= order_selector available_orders, i18n_scope: "decidim.vocdoni.elections.orders" %>

<div class="card__grid-grid">
  <% paginated_elections.each do |election| %>
    <%= card_for election, from: election %>
  <% end %>
</div>

<%= decidim_paginate paginated_elections %>
